//  TOGGLE CURSOR  =  'c'
void toggleCursor () {
    cursorIsOn = !cursorIsOn;    
    println("*** Cursor is " + cursorIsOn + " ***");
    if (cursorIsOn) {
      cursor();
    } else {
      noCursor();
    }
}
